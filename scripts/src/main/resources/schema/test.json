{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["resCode", "resBody"],
  "properties": {
    "resCode": {
      "type": "number",
      "title": "The Http Status Code",
      "minimum": 400
    },
    "resBody": {
      "title": "The Response Body",
      "type": "object",
      "required": ["name", "message"],
      "properties": {
        "name": {
          "type": "string",
          "title": "The Error Code"
        },
        "message": {
          "type": "string",
          "title": "The Error Message"
        }
      }
    }
  }
}